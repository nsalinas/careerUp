@import "normalize.styl"
@import "fonts.styl"

azul_claro = #3E7897
azul_oscuro = #1D3449

body
	font-family 'Varela Round', sans-serif
	a
		text-decoration none
header
	width 100%
	height 200px
	background linear-gradient(azul_claro 10%,azul_oscuro 90%)
	background -webkit-linear-gradient(azul_claro 10%,azul_oscuro 90%)
	background -moz-linear-gradient(azul_claro 10%,azul_oscuro 90%)
	background -o-linear-gradient(azul_claro 10%,azul_oscuro 90%)
h1
	color azul_oscuro
h2
	color azul_claro
